/*
chapter 2 challenge 5
The challenge doesnt require formatting numbers after every third number
*/
 import java.text.DecimalFormat;
 
public class Main
{
    public static void main(String[] args) {
        
        
        double percentage = .62;
        double sales = 4600000;
        double generate = 0;
        
        
        generate = sales * percentage;
        
        DecimalFormat df = new DecimalFormat("#,###.00");
        String formatNumber = df.format(generate);
        
        System.out.print("East Coast sale division generate in tatal sales: " + formatNumber);
        
    }
}
