public class Main
{
    public static void main(String[] args) {
        
        
        String firstStar = "   *";
        String secondStar = "  ***";
        String thirdStar = " *****";
        String fourthStar = "********";
        
        
        System.out.print(firstStar + "\n" + secondStar + "\n" + thirdStar + "\n" + fourthStar + "\n" + thirdStar + "\n" + secondStar + "\n" + firstStar);
        
    }
}
